/**app.wxss**/
page{
  width: 100%;
  height: 100%;
  font-family: "微软雅黑";
}
.container {
  width: 100%;
  height: 100%;
} 
/*指定 placeholder 的样式类*/
.placeholder{
  font-family: "微软雅黑";
  color: #999;
}
/*浮动*/
.fl{
  float: left;
}
.fr{
  float: right;
}
.clear:after{
  content:'\0020';
  display:block;
  height:0;
  clear:both;
}

